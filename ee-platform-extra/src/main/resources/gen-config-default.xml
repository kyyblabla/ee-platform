<?xml version="1.0" encoding="UTF-8" ?>
<config>

    <!--生成计划 begin-->
    <plans>
        <plan name="jpa-entity" comment="jpa类型的entity">
            <template>jpa/Entity.java</template>
        </plan>
        <plan name="jpa" comment="jpa类型的dao">
            <template>jpa/Entity.java</template>
            <template>jpa/EntityDao.java</template>
            <template>jpa/EntityDaoTest.java</template>
        </plan>
        <plan name="crud" comment="crud使用jpa">
            <template>crud/EntityService.java</template>
            <template>crud/EntityServiceTest.java</template>
            <template>crud/EntityController.java</template>
            <template>crud/EntityControllerTest.java</template>
        </plan>
        <plan name="crud-jpa" comment="crud使用jpa">
            <template>REF:crud</template>
            <template>REF:jpa</template>
        </plan>
    </plans>
    <!--生成计划 end-->

