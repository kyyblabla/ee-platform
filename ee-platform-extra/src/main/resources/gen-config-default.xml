        <typeConvert name="defaultTypeConvert">com.ax.extra.gen.convert.DefaultTypeConvert</typeConvert>
    </typeConverts>
    <!--类型处理器 end-->

    <!--默认配置 begin-->
    <genProperty>
        <genPlan>crud-jpa-with-test</genPlan>
        <replaceFile>true</replaceFile>
        <typeHandle>defaultTypeHandle</typeHandle>
        <packageName>com.ax</packageName>
        <!--表名前缀匹配模式如：表"sys_user" 的前缀为"sys_" -->
        <prefixPattern>^[\w][\w\d]+_</prefixPattern>
    </genProperty>
    <!--默认配置 end-->

